@model SSD_Assignment_WebApp.Models.Game

@foreach (List<GridSpace> row in Model.Map)
{
    @foreach (GridSpace g in row)
    {
        @if (g.Building == 'R')
        {
            <img src="~/images/residential.jpg" width="50" />
        }

        @if (g.Building == 'I')
        {
            <img src="~/images/industry.jpg" width="50" />
        }

        @if (g.Building == 'C')
        {
            <img src="~/images/commercial.jpg" width="50" />
        }

        @if (g.Building == 'O')
        {
            <img src="~/images/park.jpg" width="50" />
        }

        @if (g.Building == '*')
        {
            <img src="~/images/road.jpg" width="50" />
        }

        @if (g.Building == 'N')
        {
            <img src="~/images/empty.jpg" width="50"/>
        }

    }
    <br />

}
