@{
    ViewData["Title"] = "Main Menu";
}
<link rel="stylesheet" type="text/css" href="~/css/mainMenu.css" />
<body class ="bg">
    <div class="center" style="margin:auto;">
        <div class="blurDiv">
            <h2> Welcome to Ngee Ann City! </h2>
            <div class="btn-group">
                <button onclick="window.location.href ='/Home/NewGame'" class="button">Start New Game</button>
            </div>

            <div class="btn-group">
                <button class="button">Load Game</button>
            </div>

            <div class="btn-group">
                <button onclick="window.location.href ='/Home/Instructions'" class="button">How to play</button>
            </div>

            <div class="btn-group" style="margin-bottom:10px;">
                <button class="button" onclick="CloseWindow();">Exit</button>
            </div>
        </div>
    </div>
</body>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<script language="javascript" type="text/javascript">
   function CloseWindow(newState) {
    setTimeout(function () {
        if (newState != -1) {
            window.close();
        }
    },300);
}
</script>