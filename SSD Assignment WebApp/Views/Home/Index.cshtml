@{
    ViewData["Title"] = "Main Menu";
}
<link rel="stylesheet" type="text/css" href="~/css/mainMenu.css" />
<body class ="bg">
    <div class="center" style="margin:auto;">
        <div class="blurDiv">
            <h2> Welcome to Ngee Ann City! </h2>
            <div class="btn-group">
                <button onclick="window.location.href ='/Home/NewGame'" class="button">Start New Game</button>
            </div>

            <div class="btn-group">
                <button class="button">Load Game</button>
            </div>

            <div class="btn-group">
                <button onclick="window.location.href ='/Home/Instructions'" class="button">How to play</button>
            </div>

            <div class="btn-group" style="margin-bottom:10px;">
                <button class="button" onclick="redirect()" >Exit</button>
            </div>
        </div>
    </div>
</body>

